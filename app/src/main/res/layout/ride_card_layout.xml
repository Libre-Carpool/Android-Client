<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/item_margin"
    android:paddingTop="@dimen/item_margin"
    android:paddingLeft="@dimen/item_margin"
    android:paddingBottom="@dimen/item_margin"
    android:clickable="true"
    android:background="@drawable/ride_card_background">
    <TextView
        android:id="@+id/ride_row_destination_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/item_margin"
        android:gravity="center_horizontal|center_vertical"
        android:drawableLeft="@mipmap/ic_location_city_black_24dp"
        android:drawableStart="@mipmap/ic_location_city_black_24dp"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/filter_parameter_textSize"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_divider_dark" />
    <TextView
        android:id="@+id/ride_row_origin_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/item_margin"
        android:gravity="center_horizontal|center_vertical"
        android:drawableLeft="@mipmap/ic_time_to_leave_black_24dp"
        android:drawableStart="@mipmap/ic_time_to_leave_black_24dp"
        android:drawablePadding="@dimen/activity_horizontal_margin"/>

</LinearLayout>