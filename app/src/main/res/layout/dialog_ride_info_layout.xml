<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/ride_info_dialog_horizontal_padding"
    android:paddingTop="@dimen/item_margin"
    android:paddingLeft="@dimen/ride_info_dialog_horizontal_padding"
    android:paddingBottom="@dimen/item_margin"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="?attr/colorPrimary" />

    <TextView
        android:id="@+id/ride_info_destination_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/ride_info_dialog_vertical_padding"
        android:paddingBottom="@dimen/item_margin"
        android:textSize="@dimen/ride_info_dialog_text_size"/>

    <TextView
        android:id="@+id/ride_info_through_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/item_margin"
        android:paddingBottom="@dimen/item_margin"
        android:textSize="@dimen/ride_info_dialog_text_size"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ride_info_comments_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/item_margin"
        android:paddingBottom="@dimen/item_margin"
        android:textSize="@dimen/ride_info_dialog_text_size"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/ride_info_dialog_action_buttons_vertical_padding"
        android:paddingBottom="@dimen/item_margin"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/ride_dialog_call_textView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_ripple_button"
            android:drawableTop="@mipmap/ic_call_black_36dp"
            android:gravity="center"
            android:clickable="true"
            android:text="@string/ride_dialog_call"
            android:textColor="@android:color/holo_green_dark"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/ride_dialog_sms_textView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_ripple_button"
            android:drawableTop="@mipmap/ic_sms_black_36dp"
            android:gravity="center"
            android:clickable="true"
            android:text="@string/ride_dialog_message"
            android:textColor="@android:color/holo_orange_light"/>
    </LinearLayout>

</LinearLayout>
