<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    // Air Force theme - focuses on blueish colors.
    <style name="AppThemeAir" parent="AppTheme">
        <item name="colorPrimary">@color/air_primary</item>
        <item name="colorPrimaryDark">@color/air_primary_dark</item>
        <item name="colorAccent">@color/air_accent</item>
        <item name="android:textColor">@color/material_text</item>
    </style>

    <style name="ToolbarAir" parent ="AppThemeAir">
        <item name="titleTextColor">@color/material_primary_text</item>
        <item name="android:textColorSecondary">@color/material_primary_text</item>
    </style>

    <style name="SpinnerStyle" parent="AppThemeAir">
        <item name="colorControlNormal">@color/material_secondary_text</item>
        <item name="android:textSize">@dimen/input_hint_text_size</item>
    </style>

</resources>
